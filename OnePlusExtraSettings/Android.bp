android_app {
    name: "OnePlusExtraSettings",

    srcs: ["src/**/*.kt"],
    resource_dirs: ["res"],

    certificate: "platform",
    platform_apis: true,
    privileged: true,
    system_ext_specific: true,

    defaults: [
        "SettingsLibDefaults",
        "platform_app_defaults",
    ],

    static_libs: [
        "org.pixelexperience.settings.resources",
    ],

    optimize: {
        proguard_flags_files: ["proguard.flags"],
    },
}
